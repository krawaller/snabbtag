{
  "name": "snabbtag",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "now-start": "preact serve",
    "build": "preact build  --template src/template.html",
    "serve": "preact build  --template src/template.html && preact serve",
    "dev": "preact watch  --template src/template.html",
    "test":
      "eslint src && npm run serve -- --server config --dest firebase.json && CHROME_FLAGS=--disable-gpu ghostjs --browser chrome test/*.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "eslint": "^4.6.1",
    "eslint-config-synacor": "^2.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "ghostjs": "^1.13.1",
    "husky": "^0.14.3",
    "if-env": "^1.0.1",
    "lint-staged": "^4.2.1",
    "preact-cli": "^1.4.1",
    "superstatic": "^5.0.1"
  },
  "dependencies": {
    "preact": "^8.2.1"
  }
}
