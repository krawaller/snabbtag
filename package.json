{
  "name": "trains-preact-cli",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "now-start": "preact serve",
    "build": "preact build  --template src/template.html",
    "serve": "preact build  --template src/template.html && preact serve",
    "dev": "preact watch  --template src/template.html",
    "test": "eslint src",
    "deploy":
      "npm test && npm run serve -- --server config --dest firebase.json && firebase deploy --project trains-1907a",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.6.1",
    "eslint-config-synacor": "^1.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "husky": "^0.14.3",
    "if-env": "^1.0.0",
    "lint-staged": "^4.1.3",
    "preact-cli": "^1.4.1"
  },
  "dependencies": {
    "preact": "^8.2.1"
  }
}
